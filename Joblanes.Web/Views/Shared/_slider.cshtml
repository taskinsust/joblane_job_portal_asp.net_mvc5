<div class="intro jobs-intro hasOverly" style="background-image: url(@Url.Content("~/images/slide1.png")); background-position: center center;">
    <div class="dtable hw100">
        <div class="dtable-cell hw100">
            <div class="container text-center">
                <h1 class="intro-title animated fadeInDown"> Find the Right Job </h1>
                <p class="sub animateme fittext3 animated fadeIn"> Find the latest jobs available in your area. </p>
                <div class="row search-row animated fadeInUp">
                    <div class="col-lg-4 col-sm-4 search-col relative locationicon">
                        <i class="icon-location-2 icon-append"></i>
                        <input type="text" name="what" id="what" class="form-control locinput input-rel searchtag-input has-icon" placeholder="Type desired jobs" value="">
                    </div>
                    <div class="col-lg-4 col-sm-4 search-col relative">
                        <i class="icon-docs icon-append"></i>
                        <input type="text" name="where" id="where" class="form-control has-icon" placeholder="city, state or job location" value="">
                    </div>
                    <div class="col-lg-4 col-sm-4 search-col">
                        <button class="btn btn-primary btn-search btn-block" id="findJob">
                            <i class="icon-search"></i><strong>
                                    Find
                                    Jobs
                                </strong>
                        </button>
                    </div>
                </div>
                <div class="resume-up">
                    <a><i class="icon-doc-4"></i></a> <a><b>Upload your CV</b></a> and easily apply to jobs from any
                    device!
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/bootbox.min.js"></script>
<script type="text/javascript">
    $(document).on("click", "#findJob", function () {
        console.log("fired");
        var what = $("#what").val();
        var where = $("#where").val();
        console.log(what);
        console.log(where);
        var url = '@Url.Action("BrowseJob", "Jobs", new { what = "__what__"})';
        url = url.replace('__what__', what + "_??!_" + where);

        console.log(url);
        window.location = url;
    });


</script>