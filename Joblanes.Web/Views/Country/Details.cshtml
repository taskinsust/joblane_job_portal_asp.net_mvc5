@model Model.JobLanes.Dto.CountryDto
@{
    ViewBag.Title = "Country Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var base64 = Convert.ToBase64String(Model.FlagBytes);
    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
}

<div class="row" style="padding-right: 10px;">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading custom-panel-h"> Country Details</div>
            <div class="panel-body">
                <table class="table table-bordered table-hover table-responsive table-striped">
                    <tr>
                        <td style="text-align: right; width: 40%; font-weight: bold">
                            <strong>@Html.DisplayNameFor(model => model.Region)</strong>
                        </td>
                        <td style="text-align: left">
                            @Html.DisplayFor(model => model.Region.Name)
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align: right; width: 40%; font-weight: bold">
                            <strong>@Html.DisplayNameFor(model => model.Name)</strong>
                        </td>
                        <td style="text-align: left">
                            @Html.DisplayFor(model => model.Name)
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align: right; width: 40%; font-weight: bold">
                            <strong>@Html.DisplayNameFor(model => model.ShortName)</strong>
                        </td>
                        <td style="text-align: left">
                            @Html.DisplayFor(model => model.ShortName)
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align: right; width: 40%; font-weight: bold">
                            <strong>@Html.DisplayNameFor(model => model.CallingCode)</strong>
                        </td>
                        <td style="text-align: left">
                            @Html.DisplayFor(model => model.CallingCode)
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align: right; width: 40%; font-weight: bold">
                            <strong>@Html.DisplayNameFor(model => model.FlagBytes)</strong>
                        </td>
                        <td style="text-align: left">
                            <img src='@imgSrc' width="300"  />
                        </td>
                    </tr>
                    @*<img src='@imgSrc' width='80' height='80' />*@
                    <tr>
                        <td style="text-align: right; width: 40%; font-weight: bold">
                            <strong>@Html.DisplayNameFor(model => model.Status)</strong>
                        </td>
                        <td style="text-align: left">
                            @Html.DisplayFor(model => model.StatusText)
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align: right; width: 40%; font-weight: bold">
                            <strong>@Html.DisplayNameFor(model => model.CreateBy)</strong>
                        </td>
                        <td style="text-align: left">
                            @Html.DisplayFor(model => model.CreateBy)
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align: right; width: 40%; font-weight: bold">
                            <strong>@Html.DisplayNameFor(model => model.ModifyBy)</strong>
                        </td>
                        <td style="text-align: left">
                            @Html.DisplayFor(model => model.ModifyBy)
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align: right; width: 40%; font-weight: bold">
                            <strong>@Html.DisplayNameFor(model => model.CreateDate)</strong>
                        </td>
                        <td style="text-align: left">
                            @Html.DisplayFor(model => model.CreateDate)
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align: right; width: 40%; font-weight: bold">
                            <strong>@Html.DisplayNameFor(model => model.ModifyDate)</strong>
                        </td>
                        <td style="text-align: left">
                            @Html.DisplayFor(model => model.ModifyDate)
                        </td>
                    </tr>
                </table>
                @Html.ActionLink("Back to List", "Index", "Country", new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
</div>
