@{
    ViewBag.Title = "ProfileDefault";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    #inner {
        width: 30%;
        margin: 0 auto;
    }
</style>
<div id="outer" style="width:100%">
    <div id="inner">
        <div class="row">
            <div class="form-horizontal">
                <div class="col-md-12">
                    <h3>Create resume for @HttpContext.Current.User.Identity.Name</h3>
                </div>
            </div>
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-5">
                        <a class="btn btn-primary" href="@Url.Action("CvUpload", "JobSeeker")"> <span style="font-size: medium; font-family: sans-serif">Upload Your Resume</span> </a>
                    </div>
                    <div class="col-md-2 text-center">
                        <span> Or </span>
                    </div>
                    <div class="col-md-5 text-right">
                        <a class="btn btn-primary" href="@Url.Action("BuildResume", "JobSeeker")"> <span style="font-size: medium; font-family: sans-serif">Build Your Resume</span> </a>
                    </div>

                </div>
            </div>
            <div class="form-group">
                <span style="font-size: small">By creating an Joblanes Resume, you agree to Joblanes's Terms Of Service, consent to our Cookie Policy and Privacy Policy, and agree to be contacted by employers via Joblanes.</span>
            </div>
        </div>
    </div>
</div>