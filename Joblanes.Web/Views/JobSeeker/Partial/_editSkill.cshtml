@model Model.JobLanes.Dto.JobSeekerSkillDto

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @*@Html.HiddenFor(model => model.Id)*@

        <input type="hidden" class="itemId" value="@Model.Id" />

        <div class="form-group">
            @Html.LabelFor(model => model.Skill, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Skill, new { htmlAttributes = new { @class = "form-control Skill" } })
                @Html.ValidationMessageFor(model => model.Skill)
            </div>
        </div>

       
        <div class="form-group">
            @Html.LabelFor(model => model.Experence, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("expYear", (IEnumerable<SelectListItem>)ViewBag.expItems, "select Experience", new { @class = "form-control expYear", @required = "required" })
                @Html.ValidationMessageFor(model => model.Experence)
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="saveSkillBtn"  type="button" value="Update" class="btn btn-default" />
            </div>
        </div>
    </div>
}

