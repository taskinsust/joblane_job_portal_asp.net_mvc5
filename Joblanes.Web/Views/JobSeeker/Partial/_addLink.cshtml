@model Web.Joblanes.Models.ViewModel.JobSeekerLinkVm

    @using (Html.BeginForm("", "", FormMethod.Post, new { id = "LinkForm", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.Link, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Link, new { htmlAttributes = new { @class = "form-control Link" } })
                    @Html.ValidationMessageFor(model => model.Link, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input id="saveLinkBtn" type="button" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
<script type="text/javascript">
    $.validator.unobtrusive.parse("#LinkForm");
</script>