@model Web.Joblanes.Models.ViewModel.JobSeekerEduVm
@Styles.Render("~/Content/bootstrap-datetimepicker")

@*<a style="margin-top: 10px" href="@Url.Action("AddEducationalQualification", "JobSeeker")" class="btn btn-m btn-primary"><i class="glyphicon glyphicon-plus-sign"></i> Add</a>*@
@*<a class="btn btn-primary" href="@Url.Action("AddEducationalQualification", "JobSeeker")"> <span style="font-size: large; font-family: sans-serif">ADD</span> </a>*@

@if (ViewBag.eduList != null)
{
    <div class="panel panel-default" style="margin-top: 10px">
        <div class="panel-heading">Educational Qualification</div>
        <div class="panel-body">
            @using (Html.BeginForm(null, null, FormMethod.Post))
            {

                <div class="form-horizontal">
                    @Html.ValidationSummary(true)
                    <input type="hidden" class="itemId" value="" />
                    <div class="form-group">
                        @Html.LabelFor(model => model.Institute, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="text" class="institute form-control" value="" id="instituteId" />
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Degree, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="text" class="degree form-control" value="" id="degreeId" />
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.FieldOfStudy, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="text" class="fieldOfStudy form-control" value="" id="fieldOfStudyId" />
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Result, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="number" class="result form-control numbersOnly" value="" id="resultId" />
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.StartingYear, new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            <input type="text" class="startingYear form_datetime form-control" value="" id="startingYearId" readonly="readonly" />
                        </div>
                        @Html.LabelFor(model => model.PassingYear, new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            <input type="text" class="passingYear form_datetime form-control" value="" id="passingYearId" readonly="readonly" />

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-1">
                            <input type="button" id="eduBtn" value="Next" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
<script type="text/javascript">
    $(document).on("change", ".startingYear, .passingYear", function () {
        var dateFromId = $(this).closest('form').find('.startingYear').attr('id');
        var dateToId = $(this).closest('form').find('.passingYear').attr('id');

        window.showErrorMessageBelowCtrl(dateFromId, "", false);
        window.showErrorMessageBelowCtrl(dateToId, "", false);
        var startingYear = $(this).closest('form').find('.startingYear').val();
        var passingyear = $(this).closest('form').find('.passingYear').val();
        if (startingYear.length <= 0) {
            window.showErrorMessageBelowCtrl(dateFromId, "", false);
            window.showErrorMessageBelowCtrl(dateFromId, "Please enter starting Year", true);
        }
        if (passingyear.length <= 0) {
            window.showErrorMessageBelowCtrl(dateToId, "", false);
            window.showErrorMessageBelowCtrl(dateToId, "Please enter passing Year", true);
        }
    });
</script>