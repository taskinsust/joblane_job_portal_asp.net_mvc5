@model Model.JobLanes.Dto.JobSeekerMilitaryDto

<div class="panel panel-default">
    <div class="panel-heading"></div>
    <div class="panel-body">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.Country, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("country", (IEnumerable<SelectListItem>)ViewBag.countries, "select Country", new { @class = "form-control country", @required = "required" })
                        @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Branch, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Branch, new { htmlAttributes = new { @class = "form-control branch" } })
                        @Html.ValidationMessageFor(model => model.Branch, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Rank, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Rank, new { htmlAttributes = new { @class = "form-control rank" } })
                        @Html.ValidationMessageFor(model => model.Rank, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2"></div>
                    <div class="col-md-10">
                        <div class="checkbox">
                            <label>
                                <input class="isStillServing" value="" id="IsStillServing" type="checkbox"> I Currently Work Here
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.DateFrom, new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.DateFrom, new { htmlAttributes = new { @class = "form-control dateFrom form_datetime", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.DateFrom, "", new { @class = "text-danger" })
                    </div>
                    <div id="isCurrentDateToMillarary">
                        @Html.LabelFor(model => model.DateTo, new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.DateTo, new { htmlAttributes = new { @class = "form-control dateTo form_datetime", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.DateTo, "", new { @class = "text-danger" })
                        </div>
                    </div>


                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <textarea cols="10" rows="5" class="description form-control" placeholder="" id="descriptionId"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Commendations, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <textarea cols="10" rows="5" class="commendations form-control" placeholder="" id="commendationsId"></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input id="saveMilitaryBtn" type="button" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

    </div>
</div>