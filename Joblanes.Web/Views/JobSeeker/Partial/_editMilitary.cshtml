@model Model.JobLanes.Dto.JobSeekerMilitaryDto

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true)
        <input type="hidden" class="itemId" value="@Model.Id" />

        <div class="form-group">
            @Html.LabelFor(model => model.Country, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("country", (IEnumerable<SelectListItem>)ViewBag.countries, "select Country", new { @class = "form-control country", @required = "required" })
                @Html.ValidationMessageFor(model => model.Country)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Branch, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Branch, new { htmlAttributes = new { @class = "form-control branch" } })
                @Html.ValidationMessageFor(model => model.Branch)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Rank, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Rank, new { htmlAttributes = new { @class = "form-control rank" } })
                @Html.ValidationMessageFor(model => model.Rank)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2"></div>
            <div class="col-md-10">
                <div class="checkbox">
                    <label>
                        <input class="isStillServing" value="" id="IsStillServing" type="checkbox"> I Currently Work Here
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DateFrom, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.DateFrom, new { htmlAttributes = new { @class = "form-control dateFrom form_datetime" } })
                @Html.ValidationMessageFor(model => model.DateFrom)
            </div>
            <div id="isCurrentDateToMillarary">
                @Html.LabelFor(model => model.DateTo, new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.DateTo, new { htmlAttributes = new { @class = "form-control dateTo form_datetime", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.DateTo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        @*<div class="form-group">
                @Html.LabelFor(model => model.DateTo, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DateTo, new { htmlAttributes = new { @class = "form-control dateTo form_datetime" } })
                    @Html.ValidationMessageFor(model => model.DateTo)
                </div>
            </div>*@

        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <textarea cols="10" rows="5" class="description form-control" placeholder="" id="descriptionId">@Model.Description</textarea>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Commendations, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <textarea cols="10" rows="5" class="commendations form-control" placeholder="" id="commendationsId">@Model.Commendations</textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="saveMilitaryBtn" type="button" value="Update" class="btn btn-default" />
            </div>
        </div>
    </div>
}
