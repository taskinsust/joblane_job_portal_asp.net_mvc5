@model Web.Joblanes.Models.ViewModel.JobSeekerExpVm
@Styles.Render("~/Content/bootstrap-datetimepicker")
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "expForm" }))
{
    @Html.AntiForgeryToken()
    <div class="panel panel-default" style="margin-top: 10px">
        <div class="panel-heading">Experience</div>
        <div class="panel-body">
            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                <input type="hidden" class="itemId" value="@Model.Id" />

                <div class="form-group">
                    @Html.LabelFor(model => model.Designation, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="text" class="designation form-control" value="@Model.Designation" id="designationId" />
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CompanyName, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="text" class="companyName form-control" value="@Model.CompanyName" id="companyNameId" />
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CompanyAddress, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="text" class="companyAddress form-control" value="@Model.CompanyAddress" id="companyAddressId" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-2"></div>
                    <div class="col-md-10">

                        <div class="checkbox">
                            @if (Model.IsCurrent == true)
                            {
                                <label>
                                    <input class="isCurrent" value="" id="isCurrentId" type="checkbox" checked="checked"> I Currently Work Here
                                </label>
                            }
                            else
                            {
                                <label>
                                    <input class="isCurrent" value="" id="isCurrentId" type="checkbox"> I Currently Work Here
                                </label>
                            }

                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.DateFrom, new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        <input type="text" class="dateFrom form-control form_datetime" value="@Model.DateFrom" id="dateFromId" readonly="readonly" />
                    </div>
                    <div id="isCurrentDateToExp">
                        @Html.LabelFor(model => model.DateTo, new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            <input type="text" class="dateTo form-control form_datetime" value="" id="dateToId" readonly="readonly" />
                        </div>
                    </div>
                    @*@Html.LabelFor(model => model.DateTo, new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            <input type="text" class="dateTo form-control form_datetime" value="@Model.DateTo" id="dateToId" readonly="readonly" />
                        </div>*@
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Responsibility, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <textarea cols="10" rows="5" class="responsibility form-control" placeholder="@Model.Responsibility" id="responsibilityId">@Model.Responsibility</textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-1">
                        <input type="button" id="expBtn" value="Update" class="btn btn-primary" />
                    </div>
                    @*<div class="col-md-2">
                            <input type="button" id="expDelBtn" value="Delete" class="btn btn-warning" />
                        </div>*@
                </div>
            </div>
        </div>
    </div>
}
