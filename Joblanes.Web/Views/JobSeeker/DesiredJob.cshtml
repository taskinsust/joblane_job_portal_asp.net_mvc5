@{
    ViewBag.Title = "DesiredJob";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading"></div>
    <div class="panel-body">
        <div class="row">
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-6">
                        <div class="checkbox">
                            <label>
                                <input class="jobType" value="" type="checkbox"> Part-Time
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input class="jobType" value="" type="checkbox"> Temporary
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input class="jobType" value="" type="checkbox"> Commission
                            </label>
                        </div>

                    </div>
                    <div class="col-md-6">
                        <div class="checkbox">
                            <label>
                                <input class="jobType" value="" type="checkbox"> Internship
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input class="jobType" value=" " type=" checkbox"> Full-Time
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input class="jobType" value="" type="checkbox"> Contract
                            </label>
                        </div>

                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2"> Expected Salary</label>
                    <div class="col-md-4">
                        <input type="text" class="form-control desireSalary" />
                    </div>
                    <div class="col-md-6">
                        <select class="desireSalaryDuration">
                            <option value="5">Per Year</option>
                            <option value="4">Per Month</option>
                            <option value="3">Per Week</option>
                            <option value="2">Per Day</option>
                            <option value="1">Per Hour</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <div class="checkbox">
                            <label>
                                <input class="isRelocate" value="" type="checkbox"> Relocate
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <input type="radio" name="gender" value="male" checked> With Usa<br>
                        <input type="radio" name="gender" value="female"> Outside Usa<br>
                    </div>

                </div>
                <div class="form-group">
                    <label class="col-md-2">
                        Employment Eligibility
                    </label>
                    <div class="col-md-4">
                        <input type="radio" name="gender" value="male" checked> Authorized to work in the US for any employer<br>
                        <input type="radio" name="gender" value="female"> Sponsorship required to work in the US<br>
                    </div>
                    
                </div>
                
                
                
            </div>
        </div>

    </div>
</div>

