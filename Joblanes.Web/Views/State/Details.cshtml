                    <tr>
                        <td style="text-align: right; width: 40%; font-weight: bold">
                            <strong>@Html.DisplayNameFor(model => model.ModifyDate)</strong>
                        </td>
                        <td style="text-align: left">
                            @Html.DisplayFor(model => model.ModifyDate)
                        </td>
                    </tr>
                </table>
                @Html.ActionLink("Back to List", "Index", "State", new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
</div>
