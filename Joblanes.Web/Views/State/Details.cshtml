                        <td style="text-align: left">
                            @Html.DisplayFor(model => model.Country.Region.Name)
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align: right; width: 40%; font-weight: bold">
                            <strong>@Html.DisplayNameFor(model => model.Country)</strong>
