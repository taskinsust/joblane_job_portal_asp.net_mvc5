                            @Html.DisplayFor(model => model.Country.Name)
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align: right; width: 40%; font-weight: bold">
                            <strong>@Html.DisplayNameFor(model => model.Name)</strong>
                        </td>
                        <td style="text-align: left">
                            @Html.DisplayFor(model => model.Name)
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align: right; width: 40%; font-weight: bold">
                            <strong>@Html.DisplayNameFor(model => model.ShortName)</strong>
                        </td>
                        <td style="text-align: left">
                            @Html.DisplayFor(model => model.ShortName)
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align: right; width: 40%; font-weight: bold">
                            <strong>@Html.DisplayNameFor(model => model.Status)</strong>
                        </td>
                        <td style="text-align: left">
                            @Html.DisplayFor(model => model.StatusText)
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align: right; width: 40%; font-weight: bold">
                            <strong>@Html.DisplayNameFor(model => model.CreateBy)</strong>
                        </td>
                        <td style="text-align: left">
                            @Html.DisplayFor(model => model.CreateBy)
