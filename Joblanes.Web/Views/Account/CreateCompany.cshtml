@model Web.Joblanes.Models.RegisterViewModel
@{
    ViewBag.Title = "Create Company";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="padding-right: 10px;">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading custom-panel-h">Create New Company</div>

            <div class="panel-body">
                @Html.Partial("_message")

                <div class="row">
                    <div class="col-sm-12">
                        @using (Html.BeginForm("CreateCompany", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <div class="col-md-4"></div>
                                <div class="col-md-8">@Html.ValidationSummary("", new { @class = "text-danger" })</div>
                            </div>
                            <fieldset>
                                @Html.HiddenFor(x => x.UserRole, new { @Value = "Employers" })

                                <div class="form-group">
                                    @Html.LabelFor(x => x.Name, new { @class = "col-md-4 control-label" })
                                    <div class="col-md-6">

                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control input-md", @placeholder = "Name" })
                                    </div>
                                </div>

                                <div class="form-group ">
                                    @Html.LabelFor(x => x.Email, new { @class = "col-md-4 control-label" })
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-md", @placeholder = "Email" })
                                    </div>
                                </div>

                                <div class="form-group ">
                                    @Html.LabelFor(x => x.Password, new { @class = "col-md-4 control-label" })
                                    <div class="col-md-6">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control  input-md" })
                                    </div>
                                </div>

                                <div class="form-group ">
                                    @Html.LabelFor(x => x.ConfirmPassword, new { @class = "col-md-4 control-label" })
                                    <div class="col-md-6">
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control  input-md" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-4 control-label"></label>
                                    <div class="col-md-8">

                                        <div style="clear:both"></div>

                                        <input type="submit" class="btn btn-primary" value="Create" />
                                    </div>
                                </div>
                            </fieldset>
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}