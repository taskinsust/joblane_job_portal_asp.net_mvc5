@model Model.JobLanes.Dto.CompanyDto
@{
    ViewBag.Title = "Job Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
   
}
<div class="row" style="padding-right: 10px;">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading custom-panel-h">  Company Profile</div>
            @{
                if (Model != null && Model.Id > 0)
                {
                    var imgSrc = "";
                    if (Model.Logo != null && Model.Logo.Length > 0)
                    {
                        var base64 = Convert.ToBase64String(Model.Logo);
                        imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                    }
                    <div class="panel-body">


                        <div class="row">
                            <div class="col-md-4 text-right">
                                <img src='@imgSrc' width="100"/>
                            </div>
                            <div class="col-md-8">
                                @Html.DisplayFor(model => model.Name)
                                <br/><br/>
                                Contact Information : @Html.DisplayFor(model => model.ContactPerson)<br/>
                                @Html.DisplayFor(model => model.ContactPersonDesignation)<br/>
                                @Html.DisplayFor(model => model.ContactMobile)<br/>
                                @Html.DisplayFor(model => model.ContactEmail)
                            </div>
                        </div>
                        <div class="row">
                            <table class="table table-bordered table-hover table-responsive table-striped">
                                <tr>
                                    <td style="text-align: right; width: 40%; font-weight: bold">
                                        <strong>Company Type </strong>
                                    </td>
                                    <td style="text-align: left">
                                        @{
                                            if (Model.CompanyType!=null)
                                            {
                                                 @Html.DisplayFor(model => model.CompanyType.Name)
                                            }
                                        }
                                       
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align: right; width: 40%; font-weight: bold">
                                        <strong>Established Date </strong>
                                    </td>
                                    <td style="text-align: left">
                                        @Html.DisplayFor(model => model.CompanyDetailList[0].EstablishedDate)
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align: right; width: 40%; font-weight: bold">
                                        <strong>Company Details </strong>
                                    </td>
                                    <td style="text-align: left">
                                        @Html.DisplayFor(model => model.CompanyDetailList[0].Description)
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align: right; width: 40%; font-weight: bold">
                                        <strong>Address</strong>
                                    </td>
                                    <td style="text-align: left">
                                        @Html.DisplayFor(model => model.CompanyDetailList[0].Address)
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align: right; width: 40%; font-weight: bold">
                                        <strong>Zip </strong>
                                    </td>
                                    <td style="text-align: left">
                                        @Html.DisplayFor(model => model.CompanyDetailList[0].Zip)
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align: right; width: 40%; font-weight: bold">
                                        <strong>City </strong>
                                    </td>
                                    <td style="text-align: left">
                                        @{
                                            if (Model.CompanyDetailList[0].City != null)
                                            {
                                                 @Html.DisplayFor(model => model.CompanyDetailList[0].City.Name)
                                            }
                                        }
                                       
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align: right; width: 40%; font-weight: bold">
                                        <strong>State </strong>
                                    </td>
                                    <td style="text-align: left">
                                        @{
                                            if (Model.CompanyDetailList[0].State!=null)
                                            {
                                                 @Html.DisplayFor(model => model.CompanyDetailList[0].State.Name)
                                            }
                                        }
                                       
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align: right; width: 40%; font-weight: bold">
                                        <strong>Country </strong>
                                    </td>
                                    <td style="text-align: left">
                                      @{
                                            if (Model.CompanyDetailList[0].Country != null)
                                            {
                                                @Html.DisplayFor(model => model.CompanyDetailList[0].Country.Name)
                                            }
                        }
                                      </td>
                                </tr>
                                <tr>
                                    <td style="text-align: right; width: 40%; font-weight: bold">
                                        <strong>Region </strong>
                                    </td>
                                    <td style="text-align: left">
                                      @{
                    if (Model.CompanyDetailList[0].Country != null)
                    {
                        @Html.DisplayFor(model => model.CompanyDetailList[0].Country.Region.Name)
                    }
}
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align: right; width: 40%; font-weight: bold">
                                        <strong>Employment Size </strong>
                                    </td>
                                    <td style="text-align: left">
                                        @Html.DisplayFor(model => model.CompanyDetailList[0].EmployeeSize)
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align: right; width: 40%; font-weight: bold">
                                        <strong>Trade License </strong>
                                    </td>
                                    <td style="text-align: left">
                                        @Html.DisplayFor(model => model.CompanyDetailList[0].TradeLicence)
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align: right; width: 40%; font-weight: bold">
                                        <strong>Web Lick </strong>
                                    </td>
                                    <td style="text-align: left">
                                        <a target="_blank" href="@Html.DisplayFor(model => model.CompanyDetailList[0].WebLink)">@Html.DisplayFor(model => model.CompanyDetailList[0].WebLink)</a> 
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align: right; width: 40%; font-weight: bold">
                                        <strong>Linkedin</strong>
                                    </td>
                                    <td style="text-align: left">
                                        <a target="_blank" href="@Html.DisplayFor(model => model.CompanyDetailList[0].LinkdinLink)">@Html.DisplayFor(model => model.CompanyDetailList[0].LinkdinLink)</a> 
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align: right; width: 40%; font-weight: bold">
                                        <strong>Vision </strong>
                                    </td>
                                    <td style="text-align: left">
                                        @Html.DisplayFor(model => model.CompanyDetailList[0].Vision)
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align: right; width: 40%; font-weight: bold">
                                        <strong>Mission </strong>
                                    </td>
                                    <td style="text-align: left">
                                        @Html.DisplayFor(model => model.CompanyDetailList[0].Mission)
                                    </td>
                                </tr>
                            </table>
                        </div>                        
                    </div>
                }
                else
                {
                    <div class="row" style="padding: 20px;">
                        <div class="col-md-12 text-center"><a class="btn btn-primary btn-lg" href="/Company/EditProfile">Update Profile</a></div>
                    </div>
                   
                }
            }
        </div>
    </div>
</div>
