
@using Model.JobLanes.Dto
@model IEnumerable<Model.JobLanes.Dto.CompanyDto>


<div class="col-lg-12 content-box ">

    <div class="row row-featured row-featured-category row-featured-company">
        <div class="col-lg-12  box-title no-border">
            <div class="inner">
                <h2>
                    <span>Featured</span>
                    companies <a class="sell-your-item" href="#"> See all companies <i class="  icon-th-list"></i> </a>
                </h2>
            </div>
        </div>
        @foreach (CompanyDto companyDto in Model)
        {
            var imgSrc = "/images/jobs/NoLogo.png";
            if (companyDto.Logo != null && companyDto.Logo.Length > 0)
            {
                var base64 = Convert.ToBase64String(companyDto.Logo);
                imgSrc = String.Format("data:image/gif;base64,{0}", base64);

            }
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-6 f-category">
                <a href="@Url.Action("CompanyJobs", "Jobs", new { id = companyDto.Id })">
                <img alt="img" class="img-responsive" src="@imgSrc">
                <h6>
                Jobs at <span class="company-name">@companyDto.Name</span> <span class="jobs-count text-muted"></span>
                </h6>
                </a>
            </div>
        }


    </div>
</div>
